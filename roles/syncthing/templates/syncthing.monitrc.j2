check process syncthing with pidfile {{syncthing_pid}}
  start program = "/bin/bash -c '/etc/init.d/syncthing start'" with timeout 6000 seconds
  stop program = "/bin/bash -c '/etc/init.d/syncthing stop'"
  if failed host 127.0.0.1 port 8080 then restart
  if cpu is greater than 90% for 2 cycles then alert
  if cpu > 95% for 30 cycles then restart
